@model List<Clarity.Core.Domain.Notification>

<div class="card equipment-color">
    <div class="card-header-equipment">
        <div class="card-head">
            <div class="row justify-content-between">
                <h2>Notifications in the system</h2>
                <a asp-action="Create">New Notification</a>
            </div>
        </div>
    </div>
    <div class="card-content">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Sender</th>
                    <th>Recipient</th>
                    <th>Subject</th>
                    <th>Date</th>
                    <th>Pending?</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a asp-action="Details" asp-route-id="@item.Id">@item.Id</a></td>
                        <th>@item.Sender</th>
                        <th>@item.Recipient</th>
                        <th>@item.Subject</th>
                        <th>@item.DateTimeCreated</th>
                        <th>@item.Pending</th>
                    </tr>
                }
            </tbody>
        </table>
    </</div>
</div>